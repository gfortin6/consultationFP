<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteRule    ^(\.well-known/.*)$ $1 [L]
    RewriteRule    ^$    webroot/    [L]
    RewriteRule    (.*) webroot/$1    [L]


    RewriteCond %{SERVER_PORT} 80      
    RewriteCond %{HTTP_HOST} ^fortinpomerleau\.ca$ [OR] 
    RewriteCond %{HTTP_HOST} ^www\.fortinpomerleau\.ca$ 
    RewriteRule ^(.*)$ https://www.fortinpomerleau.ca/$1 [R,L] 
</IfModule>